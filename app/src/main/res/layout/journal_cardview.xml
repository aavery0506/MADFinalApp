<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/LightestBlue"
    app:cardCornerRadius="40dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/TV_jcard_title"
            android:layout_width="59dp"
            android:layout_height="37dp"
            android:text="Title: "
            android:fontFamily="@font/gaegu"
            android:textStyle="bold"
            android:textColor="@color/DarkestBlue"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/jcard_show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gaegu"
            android:textColor="@color/DarkestBlue"
            android:text="Title Here..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/TV_jcard_title"/>
        <TextView
            android:id="@+id/TV_jcard_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:font="@font/gaegu"
            android:textColor="@color/DarkestBlue"
            android:textSize="16sp"
            android:text="Details here..."
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_jcard_title" />

        <TextView
            android:id="@+id/TV_jcard_date"
            android:layout_width="59dp"
            android:layout_height="37dp"
            android:fontFamily="@font/gaegu"
            android:textColor="@color/DarkestBlue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="Date: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/TV_jcard_title" />

        <TextView
            android:id="@+id/jcard_show_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gaegu"
            android:textColor="@color/DarkestBlue"
            android:text="Date Here..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/TV_jcard_date"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


