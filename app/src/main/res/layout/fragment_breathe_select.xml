<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightestBlue"
    tools:context=".BreatheSelect">


    <ImageView
        android:id="@+id/select_lotus"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:src="@drawable/lotus_simple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/DarkestBlue" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_select_brethe"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/gaegu"
            android:text="Select Breathing Time"
            android:textColor="@color/DarkestBlue"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rg_breathe_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2">

            <RadioButton
                android:id="@+id/oneMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/gaegu"
                android:text="1 Min"
                android:textColor="@color/DarkestBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/DarkBlue" />

            <RadioButton
                android:id="@+id/twoMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/gaegu"
                android:text="2 Mins"
                android:textColor="@color/DarkestBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/DarkBlue" />

            <RadioButton
                android:id="@+id/fiveMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/gaegu"
                android:text="5 Mins"
                android:textColor="@color/DarkestBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/DarkBlue" />

            <RadioButton
                android:id="@+id/tenMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/gaegu"
                android:text="10 Mins"
                android:textColor="@color/DarkestBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/DarkBlue" />

        </RadioGroup>


        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkBlue"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_breathe_select"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>